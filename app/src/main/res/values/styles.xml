<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 通用输入框的容器的style 带圆角-->
    <style name="common_edittext_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_common_edittext_container</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="edittext_email_img_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:padding">2.5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="common_email_edittext_style" parent="common_edittext_style">
        <item name="android:layout_toEndOf">@+id/iv_email</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="common_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/data_field_color_black</item>
        <item name="android:textColorHint">@color/data_field_color_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="edittext_password_img_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="common_password_edittext_style" parent="common_edittext_style">
        <item name="android:layout_toEndOf">@+id/iv_password</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="common_red_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_common_red_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>